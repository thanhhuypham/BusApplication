<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.busapp.list.ListViewLaterActivity">

    <ImageView
        android:id="@+id/imgViewClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_close_black_24dp"
        android:backgroundTint="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:text="@string/view_later"
        android:textStyle="bold"
        android:layout_below="@id/imgViewClose"
        android:id="@+id/textViewHistory"
        android:textSize="25sp"
        android:textAlignment="center"/>


    <ListView
        android:layout_below="@id/textViewHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvHistory">
    </ListView>
</RelativeLayout>
